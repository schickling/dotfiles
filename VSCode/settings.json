{
  "workbench.activityBar.visible": true,
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",
  "terminal.integrated.defaultProfile.osx": "nixFish",
  "terminal.integrated.profiles.osx.nixFish": {
    "path": "/etc/profiles/per-user/schickling/bin/fish",
    "args": [
      "-l"
    ]
  },
  "terminal.integrated.defaultProfile.linux": "fish",
  // "vim.leader": "<space>",
  "vim.useSystemClipboard": true,
  "extensions.ignoreRecommendations": true,
  "workbench.startupEditor": "newUntitledFile",
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.semi": false,
  "editor.fontFamily": "JetBrainsMono Nerd Font, JetBrains Mono, Fira Code, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font', Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 13,
  "editor.renderControlCharacters": false,
  "workbench.statusBar.visible": true,
  "editor.minimap.enabled": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.associations": {
    "*.mdx": "markdown",
    ".envrc*": "shellscript"
  },
  "editor.suggestSelection": "first",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "breadcrumbs.enabled": true,
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.exclude": {
    "**/.git": false,
    "**/.svn": false,
    "**/.hg": false,
    "**/CVS": false,
    "**/.DS_Store": false
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "remote.SSH.remotePlatform": {
    "dev": "linux",
    "hetzner": "linux",
    "homepi": "linux",
    "effect-dev": "linux",
    "dev2": "linux"
  },
  "git.enableSmartCommit": true,
  "debug.onTaskErrors": "debugAnyway",
  "[html]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "git.confirmSync": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.linkedEditing": true,
  "workbench.editor.wrapTabs": true,
  "workbench.iconTheme": "file-icons",
  "window.autoDetectColorScheme": true,
  "workbench.editor.revealIfOpen": false,
  "editor.cursorStyle": "line",
  "editor.insertSpaces": false,
  "editor.lineNumbers": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  // needed to keep task starting fast (https://github.com/microsoft/vscode/issues/63055#issuecomment-438957634)
  "npm.autoDetect": "off",
  "typescript.tsc.autoDetect": "off",
  "gulp.autoDetect": "off",
  "grunt.autoDetect": "off",
  "jake.autoDetect": "off",
  "taskExplorer.exclude": ["*", "!.vscode/tasks.json"],
  "taskExplorer.enableAnt": false,
  "taskExplorer.enableGradle": false,
  // other
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": false,
    "source.fixAll": true,
    "source.addMissingImports": true
  },
  "terminal.integrated.scrollback": 10000,
  "git.postCommitCommand": "sync",
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": false,
    "typescript": true,
    "typescriptreact": true,
    "javascript": true,
    "rust": true,
    "json": true,
    "jsonc": true,
    "mdx": false,
    "nix": true,
    "postcss": true
  },
  // Default launch setup if no `.vscode/launch.json` file is available in project
  "launch": {
    "version": "0.2.0",
    "configurations": [
      // To be used together with `NODE_OPTIONS='--inspect'`
      {
        "type": "node",
        "request": "attach",
        "name": "Attach to Node debugger",
        "skipFiles": ["<node_internals>/**"],
        "port": 9229
      }
    ]
  },
  "git.alwaysShowStagedChangesResourceGroup": true,
  "remote.SSH.useLocalServer": false,
  "nix.serverPath": "/etc/profiles/per-user/schickling/bin/rnix-lsp",
  "[javascriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "direnv.path.executable": "/etc/profiles/per-user/schickling/bin/direnv",
  "redhat.telemetry.enabled": false,
  "editor.bracketPairColorization.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "literals",
  "iridium.npm.packageManager": "yarn",
  "editor.largeFileOptimizations": false,
  "editor.guides.bracketPairs": "active",
  "typescript.tsserver.log": "off",
  "typescript.referencesCodeLens.enabled": true,
  "nix.formatterPath": "/etc/profiles/per-user/schickling/bin/nixpkgs-fmt",
  "nix.enableLanguageServer": true,
  // disable since otherwise VSC can hog CPU
  // See https://github.com/microsoft/vscode-remote-release/issues/3857#issuecomment-750982375
  "remote.SSH.localServerDownload": "off",
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "mergeEditor.diffAlgorithm": "experimental",

  // don't autofetch since it's annoying in combination with Secretive / Touch ID
  "git.autofetch": false,
  // 5 min
  // "git.autofetchPeriod": 300,
  "terminal.integrated.customGlyphs": false,
  "workbench.layoutControl.enabled": true,
  "todo-tree.highlights.enabled": false,
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO", "XXX"],
  "gitlens.codeLens.enabled": false,
  "explorer.fileNesting.patterns": {
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts, ${capture}.d.ts.map",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.${capture}.json",
    "flake.nix": "flake.lock",
    "README.md": "LICENSE, CONTRIBUTING.md",
    "prettier.config.js": ".prettierignore",
    ".envrc": ".envrc.*",
    "package.json": "package-lock.json, yarn.lock, .yarnrc.yml",
    "*.ts": "${capture}.typegen.ts"
  },
  "explorer.fileNesting.enabled": true,
  "thunder-client.htmlView": "Preview",
  "testing.automaticallyOpenPeekView": "never",
  "git.mergeEditor": true,
  "task.reconnection": true,
  "remote.SSH.defaultExtensions": [
    "gitpod.gitpod-remote-ssh"
  ],
  "gitpod.remote.useLocalApp": false,
  "editor.stickyScroll.enabled": true,
  "xml.server.binary.trustedHashes": [
    "349101d07525b2eace14ac059ab2cfeadd859227b02dcaf107378667440561a6"
  ],
  "playwright.reuseBrowser": true,
  "workbench.colorTheme": "Default Dark+ Experimental",
  "[python]": {
    "editor.formatOnType": true
  },
  "settingsSync.ignoredSettings": [
    "git.enableCommitSigning"
  ],
}